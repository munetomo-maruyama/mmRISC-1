#include <math.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include "common.h"
#include "csr.h"
#include "gpio.h"
#include "interrupt.h"
#include "uart.h"
#include "xprintf.h"

//-----------------
// Main Routine
//-----------------
void main(void)
{
    int    i;
    double fth, fsin;
    int    ith, isin;
    char   buf[256];
    char   *pbuf;
    long   num;
    //
    // Initialize Hardware
    GPIO_Init();
    UART_Init();
    INT_Init();
    //
    // Message
    printf("======== mmRISC ========\n");
    //
    // Calculate Sine
    for (i = 0; i < 360; i = i + 10)
    {
        fth = (M_PI/180) * (double)i;
        fsin = sin(fth);

        ith  = (int)floor(fth  * 1000);
        isin = (int)floor(fsin * 1000);

        printf("sin(%6d)= %5d : sin(%6.4f)=%7.4f\n", ith, isin, fth, fsin);
    }
    //
    // Wait for Interrupt
    printf("Input any Character:\n");
    while(1)
    {
    }
}

//===========================================================
// End of Program
//===========================================================
