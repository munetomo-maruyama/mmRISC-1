#include <stdint.h>
#include <stdio.h>
#include "common.h"
#include "interrupt.h"
#include "gpio.h"
#include "sc_print.h"
#include "uart.h"

//-----------------
// Main Routine
//-----------------
void main(void)
{
	volatile int i;
	double fdata;

	i = 0x12345678;
	fdata = 1.23;
	fdata = fdata * fdata;

	// Initialize Hardware
	GPIO_Init();
	UART_Init();
    INT_Init();

    //
    // Forever Loop
    while(1)
    {
        i = i + 1;
    	printf("%d\n", i);
    }
}

//===========================================================
// End of Program
//===========================================================
